# RNSR Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider API Keys (set at least one)
# =============================================================================

# Google Gemini (Recommended - best price/performance)
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Model Configuration (Optional - uses defaults if not set)
# =============================================================================

# LLM Provider: "openai", "anthropic", "gemini", or "auto" (auto-detect)
LLM_PROVIDER=auto

# Model overrides (leave blank to use provider defaults)
# OpenAI: gpt-4o-mini, gpt-4o
# Anthropic: claude-3-5-sonnet-20241022
# Gemini: gemini-2.0-flash, gemini-pro
SUMMARY_MODEL=
AGENT_MODEL=

# Embedding model overrides
# OpenAI: text-embedding-3-small
# Gemini: text-embedding-004
EMBEDDING_MODEL=

# =============================================================================
# Storage
# =============================================================================

# KV Store database path
KV_STORE_PATH=./data/kv_store.db

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
