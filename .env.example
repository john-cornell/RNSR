# RNSR Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# LLM Provider API Keys (set at least one)
# =============================================================================

# Google Gemini (Recommended - best price/performance)
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# Model Configuration (Optional - uses defaults if not set)
# =============================================================================

# LLM Provider: "openai", "anthropic", "gemini", or "auto" (auto-detect)
LLM_PROVIDER=auto


# Model overrides (leave blank to use provider defaults)
# OpenAI: gpt-5-mini (default), gpt-5.2, gpt-5.2-pro (legacy: gpt-4o-mini, gpt-4.1)
# Anthropic: claude-sonnet-4-5 (default), claude-haiku-4-5, claude-opus-4-5
# Gemini: gemini-2.5-flash (default), gemini-3-flash-preview, gemini-3-pro-preview
SUMMARY_MODEL=
AGENT_MODEL=

# Entity extraction model override - use a small, fast model to speed up extraction
# e.g. gemini-2.5-flash, gpt-5-mini
RNSR_EXTRACTION_MODEL=
# Entity extraction provider override (openai, anthropic, gemini) - optional
RNSR_EXTRACTION_PROVIDER=

# Embedding model overrides
# OpenAI: text-embedding-3-small (default)
# Gemini: text-embedding-004 (default), gemini-embedding-001
EMBEDDING_MODEL=

# =============================================================================
# Storage
# =============================================================================

# KV Store database path
KV_STORE_PATH=./data/kv_store.db

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO
